<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

    <body>

        <%- include('./partials/nav.ejs') %>

            <h1>All blogs</h1>
            <div class="blogs">

                <% if(blogs.length > 0) { %>
                    <% blogs.forEach(blog => { %>
                        <a class="single" href="/blogs/<%= blog._id %>">
                            <h2>
                                <%= blog.title %>
                            </h2>
                            <p>
                                <%= blog.snippet %>
                            </p>
                        </a>
                        <% }) %>
                            <% } else { %>
                                <p>There are no blogs to display... </p>
                                <% } %>

            </div>
            <%- include('./partials/footer.ejs') %>
    </body>

</html>