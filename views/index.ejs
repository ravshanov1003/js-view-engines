<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

    <body>

        <%- include('./partials/nav.ejs') %>

            <div class="blogs">
                <h2>All blogs</h2>

                <% if(blogs.length > 0) { %>
                    <% blogs.forEach(blog => { %>
                        <h2>
                            <%= blog.title %>
                        </h2>
                        <p>
                            <%= blog.snippet %>
                        </p>
                        <% }) %>
                            <% } else { %>
                                <p>There are no blogs to display... </p>
                                <% } %>

            </div>
            <%- include('./partials/footer.ejs') %>
    </body>

</html>